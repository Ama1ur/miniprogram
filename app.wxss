/**app.wxss**/
/* 全局样式 */
page {
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, Sans-serif, 'Microsoft YaHei', Arial, sans-serif;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  box-sizing: border-box;
  -webkit-font-smoothing: antialiased;
}

/* 通用容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  padding: 30rpx;
}

/* 卡片样式 */
.card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 文本样式 */
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.subtitle {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.text-primary {
  color: #0052d9;
}

.text-success {
  color: #10b981;
}

.text-warning {
  color: #f59e0b;
}

.text-danger {
  color: #ef4444;
}

.text-gray {
  color: #666;
}

.text-light {
  color: #999;
}

.text-xs {
  font-size: 22rpx;
}

.text-sm {
  font-size: 24rpx;
}

.text-md {
  font-size: 28rpx;
}

.text-lg {
  font-size: 32rpx;
}

.text-xl {
  font-size: 36rpx;
}

/* 按钮样式 */
.btn {
  padding: 20rpx 30rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary {
  background-color: #0052d9;
  color: white;
}

.btn-success {
  background-color: #10b981;
  color: white;
}

.btn-block {
  width: 100%;
}

/* 布局 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-center {
  justify-content: center;
}

.flex-1 {
  flex: 1;
}

/* 间距 */
.m-2 {
  margin: 20rpx;
}

.mt-2 {
  margin-top: 20rpx;
}

.mb-2 {
  margin-bottom: 20rpx;
}

.mr-2 {
  margin-right: 20rpx;
}

.ml-2 {
  margin-left: 20rpx;
}

.p-2 {
  padding: 20rpx;
}

.pt-2 {
  padding-top: 20rpx;
}

.pb-2 {
  padding-bottom: 20rpx;
}

.pr-2 {
  padding-right: 20rpx;
}

.pl-2 {
  padding-left: 20rpx;
}

/* 边框和阴影 */
.border {
  border: 1rpx solid #eee;
}

.border-t {
  border-top: 1rpx solid #eee;
}

.border-b {
  border-bottom: 1rpx solid #eee;
}

.rounded {
  border-radius: 8rpx;
}

.rounded-lg {
  border-radius: 16rpx;
}

.rounded-full {
  border-radius: 9999rpx;
}

.shadow {
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.shadow-lg {
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
